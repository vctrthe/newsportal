                            },
                            "page": {
                                "type": "integer",
                                "example": 1
                            },
                            "per_page": {
                                "type": "integer",
                                "example": 10
                            },
                            "total_pages": {
                                "type": "integer",
                                "example": 10
                            }
                        }
                    }
                }
            },

