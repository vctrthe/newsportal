            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "type": "boolean",
                                "example": false
                            },
                            "message": {
                                "type": "string",
                                "example": "An error occured"
                            }
                        }
                    }
                }
            },

            "DefaultResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "type": "object",
