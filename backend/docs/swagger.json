                    }
                }
            },

            "ContentRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "content"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "content"
                    },
                    "description": {
                        "type": "string",
                        "example": "content"
                    },
                    "tags": {
                        "type": "string",
                        "example": "content.data"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "status": {
                        "type": "string",
                        "example": "DRAFT"
                    },
                    "image": {
                        "type": "string",
                        "example": "https://image.co"
                    }
                }
            },

            "UpdatePasswordRequest": {
                "type": "object",
                "properties": {
                    "current_password": {
                        "type": "string",
                        "example": "passss"
                    },
                    "new_password": {
                        "type": "string",
                        "example": "password123"
                    },
                    "confirm_password": {
                        "type": "string",
                        "example": "password123"
                    }
                }
            },

            "AuthResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "success"
                    },
                    "access_token": {
                        "type": "string",
                        "example": "1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    },
                    "expires_at": {
                        "type": "integer",
                        "example": 12345612
                    }
                }
            },

            "CategoryResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Category 1"
                    },
                    "slug": {
                        "type": "string",
                        "example": "category-1"
                    },
                    "created_by_name": {
                        "type": "string",
                        "example": "John Doe"
                    }
                }
            },

            "ContentResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Category 1"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "excerpt"
                    },
                    "description": {
                        "type": "string",
                        "example": "description"
                    },
                    "status": {
                        "type": "string",
                        "example": "PUBLISHED"
                    },
                    "image": {
                        "type": "string",
                        "example": "https://image.co"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "data"
                        }
                    },
                    "author": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "category_name": {
                        "type": "string",
                        "example": "Category 1"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_by_id": {
                        "type": "integer",
                        "format": 1
                    }
                }
            },

            "ProfileResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
